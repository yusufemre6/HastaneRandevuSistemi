@model HastaneRandevuSistemi.Models.Kullanici
@{
    ViewData["Title"] = "Kayıt Ol";
    ViewData["Css"] = "~/css/KayitOl.css";
}
<div class="wrapper">
    <div class="logo">
        <img src="~/img/hospital-building.png" alt="">
    </div>
    <div class="text-center mt-4 name">
        Saü Hastane
    </div>
    <form class="p-3 mt-3" method="post">
        <div class="form-field d-flex align-items-center">
            <input type="text" asp-for="Adi" placeholder="Adınız">
            <span asp-validation-for="Adi" class="text-danger"></span>
            <input type="text" asp-for="Soyadi" placeholder="Soyadınız">
            <span asp-validation-for="Soyadi" class="text-danger"></span>
        </div>
        <div class="form-field d-flex align-items-center">
            <label class="text-secondary" for="dogum_tarihi">Doğum Tarihi</label>
            <table class="mx-4 my-2">
                <tbody>
                    <tr>
                        <td class="text-center text-secondary">Gün</td>
                        <td class="text-center text-secondary">Ay</td>
                        <td class="text-center text-secondary">Yıl</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="number" asp-for="dtGun" class="form-control border border-light rounded" value="" min="1" max="31">
                            <span asp-validation-for="dtGun" class="text-danger"></span>
                        </td>
                        <td>
                            <input type="number" asp-for="dtAy" class="form-control border border-light rounded" value="" min="1" max="12">
                            <span asp-validation-for="dtAy" class="text-danger"></span>
                        </td>
                        <td>
                            <input type="number" asp-for="dtYil" class="form-control border border-light rounded" value="" min="1900" max="2023">
                            <span asp-validation-for="dtYil" class="text-danger"></span>  
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Email" type="text" placeholder="E-Mail">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="TelNo" type="text" class="form-control" placeholder="Telefon Numarası">
            <span asp-validation-for="TelNo" class="text-danger"></span>
        </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Sifre" type="password" placeholder="Şifre">
            <span asp-validation-for="Sifre" class="text-danger"></span>
        </div>
        <input type="submit" class="btn mt-3" value="Kayıt Ol">
    </form>
    <div class="text-center fs-6">
        <a href="#">Giriş Yap</a>
    </div>
</div>