<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saü Hastane - @ViewData["Title"]</title>
    <link rel="icon" href="~/img/hospital-building.png" type="image/png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="@ViewData["Css"]" asp-append-version="true" />
    <link rel="stylesheet" href="~/HastaneRandevuSistemi.styles.css" asp-append-version="true" />
</head>
<body class="my-0">
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <div class="col-md-3 mb-2 mb-md-0">
                <a class="d-inline-flex link-body-emphasis text-decoration-none" asp-controller="Home" asp-action="AnaSayfa">
                    <img src="~/img/hospital-building.png" alt="Saü Hastane" width="50px"/>
                </a>
            </div>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a class="nav-link text-info px-2" asp-controller="Home" asp-action="AnaSayfa">Ana Sayfa</a></li>
                <li><a class="nav-link text-info px-2" asp-controller="Home" asp-action="Kadro">Doktor Kadrosu</a></li>
                <li><a class="nav-link text-info px-2" asp-controller="Home" asp-action="Hakkimizda">Hakkımızda</a></li>
                <li><a class="nav-link text-info px-2" asp-controller="Home" asp-action="Iletisim">İletişim</a></li>
                
            </ul>

            <div class="col-md-3 text-end">
                <a class="btn btn-outline-danger me-2 text-danger" asp-controller="Authentication" asp-action="GirisYap">Giriş Yap</a>
                <a class="btn btn-outline-info text-info" asp-controller="Authentication" asp-action="KayitOl">Kayıt Ol</a>
            </div>
        </header>
    </div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <img height="33.5" src="~/img/hospital.png" />
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">© 2023 Company, Inc</span>
            </div>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3"><a class="text-body-secondary"><img height="33.5" src="~/img/whatsapp.png" /></a></li>
                <li class="ms-3"><a class="text-body-secondary"><img height="33.5" src="~/img/instagram.png" /></a></li>
                <li class="ms-3"><a class="text-body-secondary"><img height="33.5" src="~/img/facebook.png" /></a></li>
                <li class="ms-3">
                    <div class="dropup-center dropup">
                        <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Localization
                        </button>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="dropdown-item">
                                    <img height="27" src="~/img/turkey.png" />
                                    Türkçe
                                </a>
                            </li>
                            <li><a  asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US"  class="dropdown-item">
                                    <img height="27" src="~/img/united-states.png" />
                                    İngilizce
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

