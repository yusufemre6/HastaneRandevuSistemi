@{
    Layout = "_LayoutDashboard";
    ViewData["Css"] = "";
    ViewData["Title"] = "Hastaneler";
}

<table class="table table-striped mt-2">
    <thead>
        <tr>
            <th scope="col" class="text-center">Id</th>
            <th scope="col" class="text-center">Hastane Adı</th>
            <th scope="col" class="text-center">Hastane Türü</th>
            <th scope="col" class="text-center">Hastane Adresi</th>
            <th scope="col" class="text-center">Sil</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var hastane in ViewBag.Hastaneler)
            {
                <tr>
                    <th scope="row" class="text-center">@hastane.HastaneId</th>
                    <td class="text-center">@hastane.HastaneAdi</td>
                    <td class="text-center">@hastane.HastaneTurAdi</td>
                    <td class="text-center">@hastane.HastaneAdresi</td>
                    <td>
                        <form class="text-center mb-2" asp-controller="Admin" asp-action="HastaneSil" method="post">
                            <input type="hidden" name="id" value=@hastane.HastaneId>
                            <input type="submit" value="Sil" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>